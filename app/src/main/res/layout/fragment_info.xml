<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sxau.agriculture.view.fragment.InfoFragment">


    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:background="@color/mainColor"
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:stl_indicatorAlwaysInCenter="false"
        app:stl_indicatorWithoutPadding="false"
        app:stl_indicatorInFront="true"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorColor="#999999"
        app:stl_indicatorThickness="0dp"
        app:stl_indicatorWidth="auto"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_overlineColor="#FFFFFF"
        app:stl_overlineThickness="0dp"
        app:stl_underlineColor="#FFFFFF"
        app:stl_underlineThickness="1dp"
        app:stl_dividerColor="#FFFFFF"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabBackground="@color/mainColor"
        app:stl_defaultTabTextAllCaps="true"
        app:stl_defaultTabTextColor="#FFFFFF"
        app:stl_defaultTabTextSize="16sp"
        app:stl_defaultTabTextHorizontalPadding="16dp"
        app:stl_defaultTabTextMinWidth="0dp"
        app:stl_distributeEvenly="true"
        app:stl_clickable="true"
        app:stl_titleOffset="auto_center"
        app:stl_drawDecorationAfterTab="true"
        />



    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab"
        />
</RelativeLayout>
