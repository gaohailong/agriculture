<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyWhite"
    android:orientation="vertical"
    tools:context="com.sxau.agriculture.view.activity.AskQuestion">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:src="@drawable/ic_actionbar_back_48px" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/bg_question_submit_btn_shape"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_question"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            android:hint="请输入问题:"
            android:paddingTop="5dp"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE5DE"/>

        <EditText
            android:id="@+id/et_question_info"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:hint="请输入问题详情:"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:paddingTop="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEE5DE"/>

        <Button
            android:id="@+id/btn_add_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_question_submit_btn_shape"
            android:text="添加图片"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            />


    </LinearLayout>
</LinearLayout>
