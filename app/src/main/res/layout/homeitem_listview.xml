<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialsmall"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_news"
            android:text="全面推动“三品一标”工作再上新台阶"
            android:textSize="15dp"
            android:layout_alignTop="@+id/iv_news"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_news"
            android:layout_alignBottom="@+id/iv_news"
            android:text="2016.4.8"
            android:textSize="10dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/iv_browse"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/browse"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_browse"
                android:text="12万"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
